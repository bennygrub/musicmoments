<%= form_for(@moment) do |f| %>
  <% if @moment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@moment.errors.count, "error") %> prohibited this moment from being saved:</h2>

      <ul>
      <% @moment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Song (please use a youtube or vimeo URL)' %><br />
    <%= f.text_field :song, :placeholder => "example: http://www.youtube.com/watch?v=EBLuWKnKIn0" %>
  </div>
  <div class="field">
    <%= f.label 'Date' %><br />
    <%= f.date_select :year %>
  </div>
  <div class="field">
    <%= f.label :season %><br />
    <%= f.text_field :season %>
  </div>
  <div class="field">
    <%= f.label 'Friends (comma seperated)' %><br />
    <%= f.text_field :friends %>
  </div>
  <%= f.hidden_field :current_user, :value => current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
